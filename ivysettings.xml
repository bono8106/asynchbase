<?xml version="1.0" encoding="ISO-8859-1"?>
<ivysettings>
  <properties environment="env" />
  <properties file="ivy.${os.name}.properties" />
  <resolvers>
    <chain name="global-repo" returnFirst="true">
      <filesystem name="vob-repo">
        <ivy pattern="${ivy.vob.repo.dir}/[organisation]/[module]/[revision]/[artifact]-[revision].xml"/>
        <artifact pattern="${ivy.vob.repo.dir}/[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]).[ext]"/>
      </filesystem>
      <ibiblio name="ibiblio" m2compatible="true" />
      <ibiblio name="ibiblio-jboss-nexus" root="http://repository.jboss.org/nexus/content/groups/public/" m2compatible="true" />
    </chain>
  </resolvers>

  <settings defaultResolver="global-repo" />
  <caches defaultCacheDir="${ivy.cache.dir}" useOrigin="true" />
</ivysettings>
